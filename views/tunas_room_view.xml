<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <!-- tunas.room tree view -->
        <record id="tunas_room_view_tree" model="ir.ui.view">
            <field name="name">tunas.room.view.tree</field>
            <field name="model">tunas.room</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="name"/>
                    <field name="type_room"/>
                    <field name="location_room"/>
                    <field name="capacity"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        <!-- tunas.room form view -->
        <record id="tunas_room_view_form" model="ir.ui.view">
            <field name="name">tunas.room.view.form</field>
            <field name="model">tunas.room</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                        </group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="name"/>
                            <field name="type_room"/>
                            <field name="location_room"/>
                            <field name="capacity"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tunas.room action window -->
        <record id="tunas_room_action" model="ir.actions.act_window">
            <field name="name">Room</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tunas.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="tunas_room_menu_act" name="Room" parent="room_management_menu_categ" action="tunas_room_action" sequence="1"/>
    
    </data>
    

</odoo>
